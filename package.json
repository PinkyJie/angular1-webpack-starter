    "http-server": "^0.8.5",
    "isparta-loader": "^1.0.0",
    "jade": "^1.11.0",
    "jade-loader": "^0.7.1",
    "jasmine-core": "^2.3.4",
    "jasmine-spec-reporter": "^2.4.0",
    "karma": "^0.13.10",
    "karma-chrome-launcher": "^0.1.8",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.3.1",
    "karma-jasmine": "^0.3.5",
    "karma-junit-reporter": "^0.3.6",
