{
  "name": "angular1-webpack-starter",
  "version": "0.5.0",
  "description": "Component based Angular web development with Webpack.",
  "engines": {
    "node": ">=4.0.0"
  },
  "repository": "PinkyJie/angular1-webpack-starter",
  "license": "MIT",
  "main": "source/app/index.js",
  "scripts": {
    "start": "webpack-dev-server --mock",
    "build": "rm -rf ./build && webpack --progress --mock --prod",
    "test": "rm -rf ./source/test/unit/results && karma start ./karma.config.js",
    "codecov": "cat ./source/test/unit/results/coverage/lcov.info | codecov",
    "test:watch": "karma start ./karma.config.js --watch",
    "webdriver-update": "webdriver-manager update",
    "webdriver-start": "webdriver-manager start",
    "e2e": "protractor ./protractor.config.js",
    "server": "nohup http-server ./build &"
  },
  "author": {
    "name": "马斯特",
    "email": "pilixiaoxuanfeng@gmail.com",
    "url": "https://github.com/PinkyJie"
  },
  "files": [
    "source"
  ],
  "keywords": [
    "es6",
    "components",
    "angular",
    "webpack",
    "jade",
    "stylus",
    "ui-router",
    "material design"
  ],
  "devDependencies": {
